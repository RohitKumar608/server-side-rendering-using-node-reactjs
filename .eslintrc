{
  "root": true,
  "plugins": [
      "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "rules": {
    "no-console": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": [2, "never"],
    "max-len": ["error", { "code": 6000 }],
    "no-multi-spaces": "error",
    "computed-property-spacing": ["error", "never"],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-case-declarations": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}